using System;

class InventorySystem
{
    static void Main()
    {
       
        string[,] products = new string[2, 3]
        {
            { "Apples", "Milk", "Bread" },  
            { "10", "5", "20" }            
        };

        string[] initialStock = { "10", "5", "20" };

        Console.WriteLine("[MARY ROSE C. MACABENTA]");
        Console.WriteLine("Welcome to Multi-Dimensional Inventory Management!\n");

        while (true)
        {
            Console.WriteLine("1. View Inventory");
            Console.WriteLine("2. Update Stock");
            Console.WriteLine("3. Reset Inventory");
            Console.WriteLine("4. Exit");
            Console.Write("Enter your choice: ");

            string choice = Console.ReadLine();

            switch (choice)
            {
                case "1":
                    Console.WriteLine("\nCurrent Inventory:");
                    for (int i = 0; i < products.GetLength(1); i++)
                    {
                        Console.WriteLine($"{i + 1}. {products[0, i]} - {products[1, i]} units");
                    }
                    Console.WriteLine();
                    break;

                case "2":
                    Console.WriteLine("\nSelect a product to update (1-3):");
                    for (int i = 0; i < products.GetLength(1); i++)
                    {
                        Console.WriteLine($"{i + 1}. {products[0, i]}");
                    }

                    Console.Write("Enter product number: ");
                    if (int.TryParse(Console.ReadLine(), out int productNumber) &&
                        productNumber >= 1 && productNumber <= products.GetLength(1))
                    {
                        Console.Write($"Enter new quantity for {products[0, productNumber - 1]}: ");
                        string newStock = Console.ReadLine();

                        if (int.TryParse(newStock, out int validStock) && validStock >= 0)
                        {
                            products[1, productNumber - 1] = newStock;
                            Console.WriteLine("Stock updated successfully!\n");
                        }
                        else
                        {
                            Console.WriteLine("Invalid stock value. Please enter a non-negative number.\n");
                        }
                    }
                    else
                    {
                        Console.WriteLine("Invalid product selection.\n");
                    }
                    break;

                case "3":
                    for (int i = 0; i < products.GetLength(1); i++)
                    {
                        products[1, i] = initialStock[i];
                    }
                    Console.WriteLine("\nInventory has been reset to initial stock values.\n");
                    break;

                case "4":
                    Console.WriteLine("Exiting program. Goodbye!");
                    return;

                default:
                    Console.WriteLine("Invalid choice. Please try again.\n");
                    break;
            }
        }
    }
}
